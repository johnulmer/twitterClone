<html>
<head>
</head>
<body>
  {% include "header.jtwig" ignore missing %}
<h2>Follow / Unfollow tester page</h2>
<div id=divUsers>
</div>
<button id="btnShowUnfollowedUsers">Users I do not follow.</button>
<button id="btnAlreadyFollowing">Users I follow.</button>
<div id="responseMsg"></div>
<script>

		btnShowUnfollowedUsers = document.getElementById("btnShowUnfollowedUsers");
    btnShowUnfollowedUsers = document.getElementById("btnShowUnfollowedUsers");
    divUsers = document.getElementById("divUsers");
    divResponseMsg = document.getElementById("responseMsg");

btnShowUnfollowedUsers.addEventListener('click', function (evt) {
  var xhr = new XMLHttpRequest();
  xhr.open('GET', '/showUnfollowedUsers');
  xhr.setRequestHeader('Content-Type', 'application/x-www-form-urlencoded');
  xhr.onload = function() {
      if (xhr.status === 200) {
            divUsers.innerHTML = xhr.responseText;
      } else if (xhr.status !== 200) {
          alert('Request failed.  Returned status of ' + xhr.status);
      }
  };
  xhr.send();
});
  btnAlreadyFollowing.addEventListener('click', function (evt) {
    var xhr = new XMLHttpRequest();
    xhr.open('GET', '/showFollowedUsers');
    xhr.setRequestHeader('Content-Type', 'application/x-www-form-urlencoded');
    xhr.onload = function() {
        if (xhr.status === 200) {
              divUsers.innerHTML = xhr.responseText;
        } else if (xhr.status !== 200) {
            alert('Request failed.  Returned status of ' + xhr.status);
        }
    };
  xhr.send();
});
</script>
</body>
</html>
